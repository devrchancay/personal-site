{
  "name": "young-starter-kit",
  "description": "Gatsby starter kit",
  "version": "1.0.0",
  "author": "Ram√≥n Chancay <ramonchancayortega@gmail.com>",
  "now": {
    "name": "public-personal-site",
    "alias": "ramonchancay.now.sh"
  },
  "dependencies": {
    "gatsby": "^1.9.241",
    "gatsby-link": "^1.6.39",
    "gatsby-plugin-react-helmet": "^2.0.8",
    "react-helmet": "^5.2.0"
  },
  "keywords": ["gatsby"],
  "license": "MIT",
  "scripts": {
    "build":
      "tailwind build ./src/layouts/config.tailwind.css -c ./tailwind.js -o ./src/layouts/index.css && purgecss -c purgecss.config.js -o ./src/layouts && gatsby build",
    "develop":
      "tailwind build ./src/layouts/config.tailwind.css -c ./tailwind.js -o ./src/layouts/index.css && gatsby develop",
    "format": "prettier --write 'src/**/*.js'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tailwind":
      "tailwind build ./src/layouts/config.tailwind.css -c ./tailwind.js -o ./src/layouts/index.css",
    "predeploy":
      "mv public public-personal-site && cd public-personal-site && rm *.map",
    "deploy":
      "cd public-personal-site && now -e NODE_ENV=production --token $NOW_TOKEN --public",
    "alias": "now alias --token=$NOW_TOKEN"
  },
  "devDependencies": {
    "gatsby-plugin-react-next": "^1.0.11",
    "gatsby-source-medium": "^1.0.14",
    "prettier": "^1.11.1",
    "purgecss": "^0.21.0",
    "tailwindcss": "^0.5.2"
  }
}
